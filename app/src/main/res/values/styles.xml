<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HeaderBar">
        <item name="android:background">#303F9F</item>
    </style>

    <!--Text-->
    <style name="BMessenger" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="BMessenger.Bold" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="BMessenger.Small" parent="BMessenger">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BMessenger.Medium" parent="BMessenger">
        <item name="android:textSize">16sp</item>
    </style>


    <style name="BMessenger.Small.Bold" parent="BMessenger.Bold">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BMessenger.Medium.Bold" parent="BMessenger.Bold">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BMessenger.HintText" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <!--Button-->
    <style name="Button" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/button_with_corner</item>
    </style>

    <style name="Button.Yellow" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/button_with_corner_yellow</item>
    </style>

    <style name="Button.NoBackground" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/button_with_corner_no_background</item>
    </style>
</resources>
